                    <li class="stats-block">
                        <div class="stats-label"><%- locale.studio_stats_amount %></div>
                        <div class="stats-number-label">5</div>
                    </li>
                    <li class="stats-block">
                        <div class="stats-label"><%- locale.studio_stats_listening %></div>
                        <div class="stats-number-label">
                            <div>1</div>
                            <div></div>
                        </div>
                    </li>
                </ul>
        </main>    
    <% } %>

