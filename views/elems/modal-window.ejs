<div id="modal-background" class="modal-background">
    <div id="modal-active" class="modal-active">
        <div id="modal-close" class="modal-close">
            <svg width="800px" height="800px" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg">
                <path fill="#000000" d="M195.2 195.2a64 64 0 0 1 90.496 0L512 421.504 738.304 195.2a64 64 0 0 1 90.496 90.496L602.496 512 828.8 738.304a64 64 0 0 1-90.496 90.496L512 602.496 285.696 828.8a64 64 0 0 1-90.496-90.496L421.504 512 195.2 285.696a64 64 0 0 1 0-90.496z"/>
            </svg>
        </div>

        <div class="modal-window">
            <div class="modal-title"><%- title %></div>
            <div class="modal-description"><%- message %></div>

            <% if(typeof buttons != "undefined") { %>
            <div class="buttons">
                <div id="modal-yes" class="button modal-yes"><%- buttons.yes %></div>
                <div id="modal-no" class="button modal-no"><%- buttons.no %></div>
            </div>
            <% } %>
        </div>
    </div>
</div>